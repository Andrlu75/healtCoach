# ===========================================
# Production Environment Variables for Render
# ===========================================
# Copy this file and fill in values in Render Dashboard
# Sync: false means you need to set this manually in Render UI

# ============ Django Core ============
DJANGO_SECRET_KEY=<auto-generated-by-render>
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=.onrender.com,your-custom-domain.com
DJANGO_SETTINGS_MODULE=config.settings.prod
CSRF_TRUSTED_ORIGINS=https://*.onrender.com,https://your-custom-domain.com

# ============ Database ============
# Auto-configured by Render from database service
DATABASE_URL=<from-render-database>

# ============ Redis & Celery ============
# Auto-configured by Render from Redis service
REDIS_URL=<from-render-redis>
CELERY_BROKER_URL=<from-render-redis>

# ============ Telegram Bot ============
# Get from @BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Backend URL for webhook (your API URL on Render)
TELEGRAM_WEBHOOK_BASE_URL=https://healthcoach-api.onrender.com

# Auto-generated secret for webhook verification
TELEGRAM_WEBHOOK_SECRET=<auto-generated>

# Miniapp URL (your miniapp static site on Render)
TELEGRAM_MINIAPP_URL=https://healthcoach-miniapp.onrender.com

# ============ AI Providers ============
# At least one is required
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Which provider to use by default
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4o

# ============ Cloudflare R2 Storage ============
# For file uploads (meal photos, reports, etc.)
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=healthcoach
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# ============ Weather (Optional) ============
OPENWEATHERMAP_API_KEY=your-openweathermap-key

# ============ CORS ============
# Frontend URLs (comma-separated)
CORS_ALLOWED_ORIGINS=https://healthcoach-miniapp.onrender.com,https://healthcoach-console.onrender.com

# ============ Frontend URLs (for backend references) ============
MINIAPP_URL=https://healthcoach-miniapp.onrender.com
CONSOLE_URL=https://healthcoach-console.onrender.com
BACKEND_URL=https://healthcoach-api.onrender.com

# ============ Monitoring (Optional but Recommended) ============
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
